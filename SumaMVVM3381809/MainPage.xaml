<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SumaMVVM3381809.ViewModels"
             x:Class="SumaMVVM3381809.MainPage">

    <ContentPage.BindingContext>
        <local:SumaViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="30">
        <Label Text="Número 1" />
        <Entry Text="{Binding Numero1}" Keyboard="Numeric"/>

        <Label Text="Número 2" />
        <Entry Text="{Binding Numero2}" Keyboard="Numeric"/>

        <Label Text="Resultado" FontAttributes="Bold" />
        <Label Text="{Binding Resultado}" FontSize="24"/>
    </StackLayout>

</ContentPage>
